@model Podstawy_widoków.ViewModels.VehicleManagerEditViewModel

@{
    ViewBag.Title = "Edytuj pojazd";
    Layout = "_Layout";
}

<h2>Edytuj pojazd</h2>
<form asp-action="EditItem" asp-controller="VehicleManager" class="d-flex flex-column">
    <input type="text" name="Id" value="@Model.Id" class="collapse"/>
    <input type="text" name="Name" placeholder="Nazwa" required="required" value="@Model.Name"/>
    <textarea name="Description" placeholder="Opis" required="required" value="@Model.Description"></textarea>
    <input type="url" name="ImageUrl" placeholder="Url obrazka" required="required" value="@Model.ImageUrl"/>
    <div class="d-flex flex-row">
        <p>Typ </p>
        <select name="Type">
            @foreach (var option in Model.Types)
            {
                <!option value="@option" @(option == Model.Type ? "selected" : "")>@option</!option>
            }
        </select>
    </div>
    <div class="d-flex flex-row">
        <p>Lokalizacja </p>
        <select name="Localization">
            @foreach (var option in Model.Localizations)
            {
                <!option value="@option.Id" @(option.Id == Model.LocalizationId ? "selected" : "")>@option.Name</!option>
            }
        </select>
    </div>
    <input type="submit" class="btn btn-outline-primary" value="Dodaj"/>
</form>
